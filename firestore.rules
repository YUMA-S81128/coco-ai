rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Only the authenticated user who owns the job document can read or write it.
    // Backend services with admin privileges can bypass these rules.
    match /jobs/{jobId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
