rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ユーザーが自分のアップロードした音声ファイルを読み取ることを許可する。
    // 書き込みはバックエンドからの署名付きURLによって処理される。
    match /uploads/{userId}/{jobId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    // Allow users to read images from their own job folders.
    // Write access is handled by signed URLs from the backend, so client write is not needed.
    match /images/{userId}/{jobId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }
  }
}
